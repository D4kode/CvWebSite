---
export interface Props {
  body: string;
  href: string;
}

const { href, body } = Astro.props;
---

<section id={href}>
  <div class="bg-black py-20 mb-10 text-white">
    <div class="container mx-auto flex flex-col md:flex-row items-center justify-center my-12 md:my-24">
      <div class="flex flex-col w-full justify-center items-start p-8">
        <p class="text-lg text-justify dark:text-neutral-200">
          {body}
        </p>
      </div>
    </div>
  </div>
</section>